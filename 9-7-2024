#include <bits/stdc++.h>
using namespace std;
void solve(){
    int n;
    bool sorted=true;
    cin>>n;
    int a[n-1];
    cin>>a[0];
    for(int i=1;i<n;i++){
        cin>>a[i];
        if(a[i]<a[i-1]) sorted=false;
    }
    if(sorted==false) cout<<"0"<<endl;
    else {
        int mini=(a[1]-a[0]+2)/2;
        for(int i=1;i<n;i++){
            mini=min(mini,(a[i]-a[i-1]+2)/2);
        }
        cout<<mini<<endl;
}
}
int main() {
    int t;
    cin>>t;
    while(t--){
        solve();
    }
 
    return 0;
}
